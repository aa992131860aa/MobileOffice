<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contact_person_add_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_contact_person_add_item_diver"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.mobileoffice.view.RoundImageView
            android:id="@+id/riv_contact_person_add_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/msg_2list_linkman" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_contact_person_add_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张医生"
                android:textColor="@color/font_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_contact_person_add_item_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="第一人民医院"
                android:textColor="@color/font_black_6"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_contact_person_add_item"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edit_border_green"
            android:text="添加"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_contact_person_add_item_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/gray"
        android:visibility="gone" />

</LinearLayout>