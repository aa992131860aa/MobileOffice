<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/rl_content"
        android:background="@drawable/layout_seletor"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="@dimen/margin_space"
        android:paddingRight="@dimen/margin_space"
        >
        <ImageView
            android:id="@+id/iv_organ"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/cloud_1index_1liver"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black_3"
            android:text="器官1232.pdf"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:layout_toRightOf="@id/iv_organ"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black_9"
            android:text="66k"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            android:layout_toRightOf="@id/iv_organ"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black_9"
            android:text="2017-03-07"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:background="@color/gray"
        />
</LinearLayout>