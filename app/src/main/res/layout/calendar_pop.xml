<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_calendar_pop_start"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_border_high"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_calendar_pop_start"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center" />

            <ImageView
                android:id="@+id/iv_calendar_pop_start_close"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@drawable/login_close" />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/newtrs_table2_minus" />

        <LinearLayout
            android:id="@+id/ll_calendar_pop_end"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/edit_border_white_font9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_calendar_pop_end"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center" />

            <ImageView
                android:id="@+id/iv_calendar_pop_end_close"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@drawable/login_close" />
        </LinearLayout>

    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@color/gray"
        android:visibility="visible" />

    <com.dsw.calendar.views.GridCalendarView
        android:id="@+id/gcv_calendar_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/tv_calendar_pop_ok"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/cloud_2lishi_shadow"
            />
    </LinearLayout>
</LinearLayout>