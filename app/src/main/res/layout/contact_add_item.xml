<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_seletor"
        >
        <RelativeLayout

            android:layout_gravity="center"
            android:layout_width="51dp"
            android:layout_height="51dp">
            <com.mobileoffice.view.RoundImageView

                android:id="@+id/riv_contact_add_item_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/msg_2list_linkman"
                />
            <TextView
                android:textSize="10sp"
                android:id="@+id/iv_contact_add_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运"
                android:gravity="center"

                android:textColor="@color/highlight"
                android:padding="3dp"
                android:background="@drawable/team_border"
                />
        </RelativeLayout>
        <TextView

            android:id="@+id/tv_contact_add_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="赵医生"
            android:textColor="@color/font_black_3"
            android:textSize="12sp"
            />
    </LinearLayout>
    <TextView


        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="center"

        />
</LinearLayout>