<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 这个TextView就是显示字母的 -->
    <TextView
        android:id="@+id/tv_lv_item_tag"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dip"
        android:text="Z"
        android:textColor="@color/highlight"
        android:visibility="visible" />

    <View
        android:id="@+id/view_lv_item_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="0px"
        android:background="@color/gray"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        />

    <RelativeLayout
        android:background="@drawable/layout_seletor"
        android:id="@+id/rl_list_item"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <CheckBox
            android:id="@+id/cb_list_item"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />

        <com.mobileoffice.view.RoundImageView
            android:layout_toRightOf="@id/cb_list_item"
            android:id="@+id/iv_lv_item_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/msg_2list_linkman"

            />

        <TextView
            android:id="@+id/tv_lv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/iv_lv_item_head"
            android:text="周华健"
            android:textColor="@color/font_black"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>