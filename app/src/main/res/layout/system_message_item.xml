<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_system_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_border_gray_deep"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:text="content"
        android:textColor="@color/white" />

    <LinearLayout

        android:id="@+id/ll_system_message_item_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_system_message_time"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:layout_marginTop="15dp"
        android:background="@drawable/layout_seletor_coner"
        android:elevation="4dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/green"
            android:gravity="center"
            android:text="通知消息"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mes_auto_warn" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度异常"
                android:textStyle="bold"

                android:textColor="@color/highlight"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="left"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="    【单号:3652】温度为8℃,高于正常的0℃-4℃,请及时处理"
            android:textColor="@color/font_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:gravity="center"
            android:text="查看并处理"
            android:textColor="@color/green"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_system_message_item_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_system_message_time"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:layout_marginTop="15dp"
        android:background="@drawable/layout_seletor_coner"
        android:elevation="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="好友添加消息"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mobileoffice.view.RoundImageView
                android:id="@+id/riv_system_message_item"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/msg_2list_linkman" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_system_message_item_true_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赵医生"
                    android:textColor="@color/font_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_system_message_item_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="医院"
                    android:textColor="@color/font_black_6"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="请求添加您为好友"
            android:textColor="@color/font_black_3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_system_message_item_disagree"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="拒绝"
                android:background="@drawable/layout_seletor"
                android:textColor="@color/font_black_9"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_system_message_item_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray" />


            <TextView
                android:id="@+id/tv_system_message_item_agree"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/layout_seletor"
                android:layout_weight="1"
                android:gravity="center"
                android:text="同意"
                android:textColor="@color/green"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>