<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/newtrs_table1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="选择设备"
            android:textColor="@color/highlight"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_box_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:text="12303"
                android:textColor="@color/highlight"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="20sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_box_no"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/edt_box_no"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:hint="请选择设备"
                    android:textColorHint="@color/font_black_c"
                    android:layout_weight="1"
                    android:background="@drawable/edit_border_no"
                    android:gravity="right|center_vertical"
                    android:inputType="number"
                    android:textColor="@color/highlight"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
     <LinearLayout
         android:visibility="gone"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:textSize="12sp"
             android:layout_marginRight="20dp"
             android:gravity="right"
             android:hint="测试箱号(99999)"
             android:layout_gravity="right"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

         </TextView>
     </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:text="器官段号(选填)"
        android:textColor="@color/font_black_3"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="right"

        android:layout_marginRight="20dp"

        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_frg_base_info_organ_seg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/edit_border_no"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:textColor="@color/highlight"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="获取时间"
        android:textColor="@color/font_black_3"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="right"

        android:layout_marginRight="20dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_frg_base_info_date"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/edit_border_white_gray"
            android:gravity="center"
            android:textColor="@color/highlight"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_frg_base_info_time"
            android:layout_width="77dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_border_white_gray"
            android:gravity="center"
            android:textColor="@color/highlight"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="设置开箱密码(选填)"
        android:textColor="@color/font_black_3"

        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="right"

        android:layout_marginRight="20dp"

        android:orientation="vertical">

        <com.mobileoffice.view.SecurityCodeView

            android:id="@+id/scv_frg_base_info"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main" />

    <LinearLayout
        android:id="@+id/ll_frg_base_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_frg_base_info_pre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="上一步"
            android:textColor="@color/main"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_frg_base_info_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>